{% extends 'base3.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        
    </div>
    {%  if items | length > 0  %}
     <table class="table table-striped">
     <thead>
       <tr>
          <th><h1>Votre panier</h1><th></th><th></th><th></th><th></th></th>
       </tr> 
       <tr> 
       <th>Modele</th>
       <th>Prix</th>
       <th>Quantit√©</th>
       <th>Total</th>
       <th></th>
       </tr>
     </thead>
     <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.modele.titre }}</td>
                    <td>{{ item.modele.prix |  number_format(0, ',' ,' ') }} fcfa</td>
                   
                    <td>{{ item.quantity}}</td>
                    <td>{{ item.modele.prix * item.quantity |  number_format(0, ',' ,' ') }} fcfa</td>
                    <td>
                         <a class="btn btn-danger" href="{{ path('cart_remove' , {'id': item.modele.id})}}" class="btn btn-danger btn-sm" >
                            Supprimer
                         </a>
                    </td>
                </tr>
            {% endfor %}
     </tbody>
     <tfoot>
          <tr>
            <td colspan="3" class="text-right">Total=</td>
            <td style="color:blue";>{{total}} fcfa</td>
            <td></td>
          </tr>
            <td><a class="btn btn-primary" href="{{ path('contact')}}">Commander</a></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
    </tfoot>
     </table>
    {% else %}
   <p>Votre panier est vide !</p>
    {% endif %}

    
{% endblock %}